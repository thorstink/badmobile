{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "cmake",
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Debug -DBUILD_TESTING=ON  .."
            ]
        },
        {
            "label": "make",
            "args": [
                "make -j 8"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "test",
            "args": [
                "ctest -j 8"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}